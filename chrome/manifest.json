{
  "manifest_version": 2,
  "name": "Makkii Extension",
  "description": "makkii connect extension",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.baidu.com/*"
      ],
      "js": [
        "js/content_script.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://*.baidu.com/*"
    ]
  },
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "js/inpage.js"
  ]
}